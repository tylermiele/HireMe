<div class="container">
    <div class="form-container">
        <h1>Register</h1>
        {{!-- display error handling --}}
        {{#if messages}}
        <p class="alert alert-danger">{{messages}}</p>
        {{else}}
        <p class="alert alert-secondary">Please create your account.</p>
        {{/if}}
        <form method="post">
            <fieldset class="form-group mb-2">
                <label class="form-label" for="username" class="col-2 control-label">Username:</label>
                <input class="form-control" name="username" id="username" required type="email"
                    placeholder="email@email.com" />
            </fieldset>
            <fieldset class="form-group mb-2">
                <div class="flex showHide-container">
                    <label class="form-label" for="password" class="col-2 control-label">Password:</label>
                    <div class="text-center">
                        <i id="showHide" class="fa-solid fa-eye" onclick="showHide();"></i>
                    </div>
                </div>
                <input class="form-control" name="password" id="password" type="password" required
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
            </fieldset>
            <fieldset class="form-group mb-2">
                <label class="form-label" for="confirm" class="col-2 control-label">Confirm:</label>
                <input class="form-control" name="confirm" id="confirm" type="password" required
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" onkeyup="return comparePasswords();" />
                <span id="pwMsg"></span>
            </fieldset>
            <fieldset class="form-group formBtns">
                <div>
                    Already have an account? <a class="btn btn-secondary mt-2" href="/auth/login">Login</a>
                </div>
                <div>
                    <button class="btn btn-secondary mt-2" onclick="return comparePasswords();">Register</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>