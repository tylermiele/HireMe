<div class="container">
    <div class="form-container">
        <h1>Login</h1>
        <form method="post">
            <fieldset class="form-group">
                <label class="form-label" for="username" class="col-2 control-label">Username: *</label>
                <input class="form-control" name="username" id="username" required />
            </fieldset>
            <fieldset class="form-group">
                <label class="form-label" for="password" class="col-2 control-label">Password: *</label>
                <input class="form-control" name="password" id="password" type="password" required />
            </fieldset>
            <fieldset class="form-group">
                <button class="btn btn-secondary offset-11 mt-2">Login</button>
                <hr />
                Need an account? <a href="/auth/register" title="Register">Register</a>
            </fieldset>
        </form>
    </div>

</div>